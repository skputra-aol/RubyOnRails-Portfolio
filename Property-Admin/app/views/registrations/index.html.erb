
<p id="notice"><%= notice %></p>

<h4 class="text-uppercase ml-2">Registrations</h4>

<div class="row">
  <div class="col-3">
    <%= render 'filters' %>
  </div>

  <div class="col-9">
   
    <div class="row">
      <div class="col">
         <%= link_to 'New Registration', new_registration_path, class:"btn btn-success" %>
      </div>
    </div>

    <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th><%= sort_link(@q, :property_id, "Property Name") %></td>
        <th><%= sort_link(@q, :vendor_id, "Vendor") %></td>
        <th><%= sort_link(@q, :pin_id, "Pin") %></td>
        <th><%= sort_link(@q, :tag_no, "Tag Name") %></td>
        <th><%= sort_link(@q, :note, "Note") %></td>
        <th><%= sort_link(@q, :available, "Active") %></td>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @registrations.each do |registration| %>
        <tr>
          <td><%= registration.id %></td>
          <td><%= registration.property_id %></td>
          <td><%= registration.vendor_id %></td>
          <td><%= registration.pin_id %></td>
          <td><%= registration.tag_no %></td>
          <td><%= registration.note %></td>
          <td><%= registration.available %></td>
          <td><%= link_to 'Show', registration %></td>
          <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
          <td><%= link_to 'Destroy', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="row">
    <div class="flickr_pagination col ml-2">
      <div class="page_info">
        <%= page_entries_info @posts %>
      </div>
    </div>
    <div class="col">
        <%= will_paginate @registrations, list_classes: %w(pagination justify-content-end) %>
      </div>
    </div>

  </div>
 </div>
</div>
