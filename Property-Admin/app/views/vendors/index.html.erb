
<p id="notice"><%= notice %></p>

<h4 class="text-uppercase ml-2">Vendors</h4>

<div class="row">
  <div class="col-3">
    <%= render 'filters' %>
  </div>

  <div class="col-9">
   
    <div class="row">
      <div class="col">
         <%= link_to 'New Vendor', new_vendor_path, class:"btn btn-success" %>
      </div>
      <div class="col">
        <%= will_paginate @vendors, list_classes: %w(pagination justify-content-end) %>
      </div>
    </div>

    <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= sort_link(@q, :refno, "Ref No.") %></td>
        <th><%= sort_link(@q, :name, "Name") %></td>
        <th><%= sort_link(@q, :person, "Person") %></td>
        <th><%= sort_link(@q, :phone, "Phone") %></td>
        <th><%= sort_link(@q, :address, "Address") %></td>
        <th><%= sort_link(@q, :category, "Category") %></td>
        <th><%= sort_link(@q, :status, "Active") %></td>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @vendors.each do |vendor| %>
        <tr>
          <td><%= vendor.refno %></td>
          <td><%= vendor.name %></td>
          <td><%= vendor.person %></td>
          <td><%= vendor.phone %></td>
          <td><%= vendor.address %></td>
          <td><%= vendor.category %></td>
          <td><%= vendor.status %></td>
          <td><%= link_to 'Show', vendor %></td>
          <td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
          <td><%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<div class="flickr_pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
  </div>


  </div>

</div>
