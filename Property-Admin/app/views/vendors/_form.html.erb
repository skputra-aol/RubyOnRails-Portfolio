<%= form_with(model: vendor) do |form| %>
  <% if vendor.errors.any? %>
    <div style="color: red">
      <ul>
        <% vendor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :refno, style: "display: block" %>
    <%= form.number_field :refno, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :person, style: "display: block" %>
    <%= form.text_field :person, class: "form-control"  %>
  </div>

    <div class="form-group">
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone, class: "form-control"  %>
  </div>

      <div class="form-group">
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address, class: "form-control"  %>
  </div>

      <div class="form-group">
    <%= form.label :category, style: "display: block" %>
    <%= form.select(:category, options_for_select(Vendor.genres.map {|k, v| [k.humanize.capitalize, k.humanize.capitalize]}, form.object.category), { include_blank: false }, {class: "form-control" ,placeholder: "Category"}) %>

  </div>

  <div >
    <%= form.label :status, style: "display: block" %>
    <%= form.check_box :status%>

  </div>


  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>
