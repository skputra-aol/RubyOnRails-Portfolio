<div class="card">
  <div class="card-header">
    Filters
  </div>
  <div class="card-body">
    <%= search_form_for @q do |f| %>
      <div class="form-group">
        <%= f.number_field :refno_eq, class: 'form-control', placeholder: "Ref No" %>
      </div>

      <div class="form-group">
        <%= f.text_field :name_cont, class: 'form-control' , placeholder: "Name" %>
      </div>

      <div class="form-group">
        <%= f.text_field :person_cont, class: 'form-control' , placeholder: "Person" %>
      </div>

       <div class="form-group">
        <%= f.text_field :phone_cont, class: 'form-control', placeholder: "Phone"  %>
      </div>

       <div class="form-group">
        <%= f.text_field :address_cont, class: 'form-control', placeholder: "Address" %>
      </div>

      <div class="form-group">
        <%= f.select(:category_eq, options_for_select(Vendor.genres.map {|k, v| [k.humanize.capitalize, k.humanize.capitalize]}, f.object.category_eq), { include_blank: true }, {class: "form-control" ,placeholder: "Category"}) %>
      </div>

      <div class="form-group">
        <%= f.check_box :status_true, include_hidden: false , placeholder: "Status", checked: true%>
        <%= f.label :status, 'Active' %>
      </div>

      <div class="form-group">
        <div class="float-right">
          <%= link_to "Search All", request.path, :class => "btn btn-primary" %>

          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>

    <% end %>
  </div>
</div>
